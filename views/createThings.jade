extends ../node_modules/jade-bootstrap/_bootstrap
append styles
	link(href='../css/dashboard.css', rel='stylesheet')
	link(href='../css/app.css', rel='stylesheet')
append scripts
	script(src='../js/createThings.js')

block body  
	nav.navbar.navbar-inverse.navbar-fixed-top
		.container-fluid
			.navbar-header
				button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href='#')= title
			#navbar.navbar-collapse.collapse
				ul.nav.navbar-nav.navbar-right
					li
						a(href='/') All stuff
					li
						a(href='/things/create') Create new stuff
				form.navbar-form.navbar-right
					input.form-control(type='text', placeholder='Search...')
	.container-fluid
		.row
			.col-xs-12.main
				h1.page-header= title
					h2.sub-header= subTitle
				form#createThings(data-api-url=createThingsApiUrl)
					+input("text", "thingName", "Name", "Name", "Name")
					.form-group
						label(for="thingQuantity") Quantity
						input.form-control(type="number",id="thingQuantity",placeholder="Quantity",name="Quantity", value="1")
					//.form-group
					//	label(for="thingBarcode") Barcode
					//	input.form-control(type="number",id="thingBarcode",placeholder="Barcode",name="Barcode", maxlength="13")
					+input("text", "thingSize", "Size", "Size", "Size")
					input#stuffImage.form-control(type="file", name="image", accept="image/*", capture)
					img#stuffPreview(src="" height="200" alt="Image preview...")
					button.btn.btn-success.btn-lg.col-xs-12.col-sm-3(type="submit") Create

	#notifyAlert.alert.alert-info
